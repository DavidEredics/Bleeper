{
    "extends": "airbnb-base",
    "env": {
        "node": true,
        "mocha": true
    },
    "rules": {
        "no-console": "off",
        "global-require": "off",
        "consistent-return": "off"
    },
    "overrides": [
        {
            "files": ["*.test.js"],
            "rules": {
            "no-unused-expressions": "off"
            }
        }
    ]
}
